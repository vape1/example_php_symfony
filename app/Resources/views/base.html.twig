<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8" />
<title>{% block title %}CRM-Bilink{% endblock %}</title><!--Spruce-->
{% block stylesheets %}
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/zkinterface/css/custom-theme/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/base.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('/bundles/fosjsrouting/js/router.js') }}" type="text/javascript"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/zkinterface/js/jquery-ui-1.10.3.custom.min.js') }}"></script>
    <script src="{{ asset('bundles/zkinterface/js/jquery.ui.datepicker-ru.js') }}"></script>
    <script src="{{ asset('bundles/zkinterface/js/base.js') }}"></script>
{% endblock %}
<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>

<body>
    
    <div class="container">
        
        {% block sf_menu %}
            {% if app.user %}
            <div class="navbar"> <!--navbar-inverse-->
                <div class="navbar-inner">
		    <a class="brand" href="{{ path('zk_admin_user_list') }}">
			<img src="/img/logo.png" class="img-rounded">
                    </a>
	            {{ knp_menu_render('main', {'nav_type': 'pills'}) }}
		</div>
	    </div>
            <div class="navbar"> <!--navbar-inverse-->
                <div class="navbar-inner">
	            {{ knp_menu_render('dop', {'nav_type': 'pills'}) }}
		</div>
	    </div>
            {% endif %}
        {% endblock %}
        
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <p style="margin-top:20px;" class="alert alert-{{ type }}">
                    {{ message }}
                </p>
            {% endfor %}
        {% endfor %}
        <div id="alert" class="alert hidden" title="Message"></div>
        {% block sf_content %}{% endblock %}
        {% block fos_user_content %}{% endblock %}
        
    </div>
    
<div class="loading_pleace_wait"></div>
<div id="alert-dialog" class="alert-dialog" title="Message"><p></p></div>
<div id="alert-dialog-reload" class="alert-dialog" title="Message"><p></p></div>
</body>
</html>

