{% trans_default_domain 'FOSUserBundle' %}

<div class="row span8 offset2 well well-large">

    <legend>
        {{ 'form.profile'|trans }}&nbsp;&nbsp;&nbsp;&nbsp;
        ( {{ 'form.last_login'|trans }}:&nbsp;&nbsp;&nbsp;
          {{ formatDatetime(user.lastLogin,'Y-m-d H:i') }} )
    </legend>

    <div class="row">
        <div class="span3">{{ 'form.email'|trans }}</div>
        <div class="span4">{{ user.email }}</div>
    </div>
    <br>
    
    <div class="row">
        <div class="span3">{{ 'form.name'|trans }}</div>
        <div class="span4">{{ user.name }}</div>
    </div>
    <br>
    
    <div class="row">
        <div class="span3">{{ 'form.phone'|trans }}</div>
        <div class="span4">{{ user.phone }}</div>
    </div>
    <br>
    
    <div class="row">
        <div class="span3">
            {{ 'form.sex.label'|trans }}:</div>
        <div class="span4">
            {% transchoice user.sex with {} from "FOSUserBundle" %}form.sex_str{% endtranschoice %}
        </div>
    </div>
    <br>
    
   
    <br>
    
    <div class="row">
	<div class="span3"></div>
	<div class="span4">
            <a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">{{ 'form.change'|trans }}</a>
	</div>
    </div>
    
</div>
