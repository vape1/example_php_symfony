{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    
    <form class="span8 offset2 well well-large"
          action="{{ path("fos_user_resetting_reset", {'token': token}) }}"
          {{ form_enctype(form) }} method="post" >

            <legend>{{ 'resetting.reset.submit'|trans }}</legend>
            <hr>
	    
            <div class="row">
	        <div class="span3 offset1">
	            {{ form_label(form.plainPassword.first) }}
	        </div>
	        <div class="span4">
	            {{ form_errors(form.plainPassword.first) }}{{ form_widget(form.plainPassword.first) }}
	        </div>
            </div>
	    
            <div class="row">
	        <div class="span3 offset1">
	            {{ form_label(form.plainPassword.second) }}
	        </div>
	        <div class="span4">
	            {{ form_errors(form.plainPassword.second) }}{{ form_widget(form.plainPassword.second) }}
	        </div>
            </div>

            <div class="row">
	        <div class="span3 offset1"></div>
	        <div class="span4">
                    <button type="submit" class="btn btn-primary">
		        {{ 'resetting.reset.submit'|trans }}
	            </button>
	        </div>
            </div>
        
            {{ form_rest(form) }}
    
        </form>

</div>