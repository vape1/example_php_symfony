{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    
    <form class="span8 offset2 well well-large"
          action="{{ path("fos_user_resetting_send_email") }}"
          method="post" >

            <legend>{{ 'resetting.request.submit'|trans }}</legend>
            <hr>
            
            {% if invalid_username is defined %}
                <div class="error">
                    {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
                </div>
            {% endif %}
	    
            <div class="row">
	        <div class="span3 offset1">
	            <label for="username">{{ 'resetting.username'|trans }}</label>
	        </div>
	        <div class="span4">
	            <input type="text" id="username" name="username" required="required" />
	        </div>
            </div>
	    
            <div class="row">
	        <div class="span3 offset1"></div>
	        <div class="span4">
                    <button type="submit" class="btn btn-primary">
		        {{ 'resetting.request.submit'|trans }}
	            </button>
	        </div>
            </div>
    
        </form>

</div>