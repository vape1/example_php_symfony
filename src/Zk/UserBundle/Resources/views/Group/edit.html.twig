{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/zkinterface/css/jquery.ZkMultiSelectWidget.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/zkinterface/js/jquery.ZkMultiSelectWidget.js') }}"></script>
{% endblock %}

{% block sf_content %}
    
<div class="row">
    
    <div class="span12">
        
        {% if form.vars.errors|length %}
        <p class="error">{{ form_errors(form) }}</p>
        {% endif %}
    
        {% set p = group.id ? path('zk_admin_group_edit',{'id':group.id}) : path('zk_admin_group_new') %}
        
        <form class="well well-large row-shadow"
              action="{{ p }}"
              method="post" {{ form_enctype(form) }}>
            
            <legend>{{ group.id ? group.name : 'New group' }}</legend>
            
            <div class="row">
                <div class="span5">{{ form_row(form.name) }}</div>
            </div>
            
            <div class="row">
                <div class="span5">{{ form_row(form.descr) }}</div>
            </div>
            
            <div class="row">
                <div class="span5">{{ form_widget(form.groupRoles) }}</div>
            </div>
            
            <div class="row">
                <div class="span3">{{ form_row(form.save) }}</div>
            </div>
            
            <div style="display:none;">{{ form_rest(form) }}</div>
            
        </form>
            
    </div>
    
    <div class="span3">
        <a href="{{ path('zk_admin_group_list') }}" class="btn btn-success">{{ 'Back to list'|trans }}</a>
    </div>
    
</div>

{% endblock sf_content %}
