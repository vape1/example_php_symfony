{% extends "::base.html.twig" %}
{% block title %}
    {% trans from "address" %}title_addresses{% endtrans %} - {% trans from "address" %}sd_name{% endtrans %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}

{% block sf_content %}
    
    
<div class="row zk-form">
    
    <div class="spanMain">
        {{ form_errors(form) }}
        {{ form_start(form) }}
	{% if switch.id %}
	    <div class="row ">
		<div class="span11 table-vd" >
		    <div class="span2" onclick='window.location.href ="{{ path('crm_addresses_house_edit', {'id': switch.rack.parad.house.id}) }}";'>
		        <label>
			    {% trans from "address" %}h_eprasysName{% endtrans %}
			</label>
		        <span class="label label-info lable-vd">
		            {{ switch.eprasysNameHouse }}
		        </span>
	            </div>
		    <div class="span2">
		        <label>{% trans from "address" %}p_eprasysName{% endtrans %}</label>
		        <span class="label label-info lable-vd">
		            {{ switch.eprasysNameParad }}
		        </span>
		    </div>
                    <div class="span2">
		        <label>{% trans from "address" %}rk_eprasysName{% endtrans %}</label>
		        <span class="label label-info lable-vd">
		            {{ switch.eprasysNameRack }}
		        </span>
	            </div>
		    <div class="span2">
		        <label>{% trans from "address" %}sd_eprasysName{% endtrans %}</label>
		        <span class="label label-info lable-vd">
		            {{ switch.eprasysName }}
		        </span>
	            </div>
		    <div class="span2">
		        <div class="span3">{{ form_row(form.rack) }}</div>
	            </div>
		</div>
	    </div>
	    <hr>
        {% endif %}
	
	<div class="row">
	    <div class="span3">{{ form_row(form.switchType) }}</div>
	    <div class="span3">{{ form_row(form.dateInstall) }}</div>
	    <div class="span3">{{ form_row(form.installer) }}</div>
	</div>
	<hr>
	<div class="row">
	    <div class="span3">{{ form_row(form.ringNum) }}</div>
	    <div class="span3">{{ form_row(form.sfp) }}</div>
	</div>
	<hr>
	<div class="row">
	    <div class="span5">{{ form_row(form.macAddress) }}</div>
	    <div class="span5">{{ form_row(form.serialNum) }}</div>
	</div>
	<hr>
	<div class="row">
	    <div class="span3">{{ form_row(form.onControl) }}</div>
	</div>
	<hr>
	<div class="row">
            <div class="span10">{{ form_row(form.history) }}</div>
	</div>
	<hr>
	<div class="row">
	    <div class="span5">
		<a href="{{ path('crm_addresses_rack_edit', {'id': switch.rack.id}) }}" class="btn btn-primary">{% trans from "address" %}rk_name{% endtrans %}</a>
	    </div>
            <div class="span5">
		<button class="btn btn-success" type="submit">
		    {% trans from "address" %}save{% endtrans %}
		</button>
	    </div>
	    {% if switch.id  %}
	    <div class="span1">
		<a href="{{ path('crm_addresses_switch_device_delete', {'id': switch.id}) }}" class="btn btn-danger">{% trans from "address" %}dell{% endtrans %}</a>
	    </div>
	    {% endif %}
	</div>
	<hr>
        <div style="display:none;">{{ form_rest(form) }}</div>
	
	{{ form_end(form) }}
    
    </div>
    
{% endblock sf_content %}
