{% extends "::base.html.twig" %}
{% block title %}
    {% trans from "address" %}title_addresses{% endtrans %} - {% trans from "address" %}Branding{% endtrans %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}

{% block sf_content %}
    
    
<div class="row zk-form">
    
    <div class="spanMain">
        {{ form_errors(form) }}
        {{ form_start(form) }}
	
	<div class="row">
	    <div class="offset4 span3">
		<span class="label label-success lable-vd">
		   {{ brand.brandType }}
		</span>
	    </div>
	</div>
	<hr>
	<div class="row">
            <div class="span4">{{ form_row(form.dateInstall) }}</div>
	    <div class="span4">{{ form_row(form.installer) }}</div>
	    {% if brand.isPromotion %}
	    <div class="span4">{{ form_row(form.prom_door_parad) }}</div>
	    <div class="span4">{{ form_row(form.prom_lift_door) }}</div>
	    <div class="span1">{{ form_row(form.prom_shield) }}</div>
	    {% else %}
	    <div class="span2" style="padding-top: 30px">{{ form_row(form.planned) }}</div>
	    {% endif %}
	    
	    <div class="span10" style="padding-top: 30px">{{ form_row(form.descr) }}</div>
	</div>
	<hr>
	<div class="row">
	    <div class="span5">
		<a href="{{ path('crm_addresses_parad_edit', {'id': brand.parad.id}) }}" class="btn btn-primary">{% trans from "address" %}back{% endtrans %}</a>
	    </div>
            <div class="span5">
		<button class="btn btn-success" type="submit">{% trans from "address" %}save{% endtrans %}</button>
	    </div>
	    {% if  brand.id %}
	    <div class="span1">
		    <a href="{{ path('crm_addresses_brand_delete', {'id': brand.id}) }}" class="btn btn-danger">{% trans from "address" %}dell{% endtrans %}</a>
	    </div>
	    {% endif %}
			    
	</div>	   
	<hr>
	
        <div style="display:none;">{{ form_rest(form) }}</div>
	
	{{ form_end(form) }}
    </div>
    
{% endblock sf_content %}
